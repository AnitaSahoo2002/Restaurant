<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/head') %>
    <title>Document</title>
    <link rel="stylesheet" href="/style/style.css">
    
</head>
<body>
    <div class="bgc">
        <%- include('./partials/nav') %>
        <div class="formbox">
            <form action="/reserve"method="post">
                <label for="check">Please Check the date and time</label>
                   <h2> <input type="checkbox" name="date" id="date"value="<%= docs.date %>">Book For:<%= docs.date %></h2>
                 </div>
                <h3>Showing Table Information</h3>
        <div class="table-list">
            <% docs.tables.forEach(table => { %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        
                        <h5 class="card-title"><%= table.name %></h5>
                        <p class="card-text">Capacity: <%= table.capacity %></p>
                        <% if (table.isAvailable) { %>
                            <p>Available</p>
                            <input type="checkbox" name="table" id="table"value="<%= table._id %>">
                            <label for="check">Check it to Book</label>
                        <% } else { %>
                            <p>Not Available</p>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
               
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>    
        </div>
       

    </div>
    
        
    <%- include('./partials/script') %>
    
</body>
</html>